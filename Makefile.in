SUBDIRS = doc lib src

debug: all

all:
	for dir in ${SUBDIRS}; do \
	 (cd $$dir; ${MAKE} all); \
	done

clean:
	for dir in ${SUBDIRS}; do \
	 (cd $$dir; ${MAKE} clean); \
	done

distclean:
	for dir in ${SUBDIRS}; do \
	 (cd $$dir; ${MAKE} distclean); \
	done
	rm -f config.h;
	rm -f Makefile;
	rm -f config.log
	rm -f config.status

install:
	for dir in ${SUBDIRS}; do \
	 (cd $$dir; ${MAKE} install); \
	done

uninstall:
	 (cd src; ${MAKE} uninstall);

debug:

